{
	"name": "@irealbook/server",
	"private": true,
	"version": "1.1.2",
	"type": "module",
	"scripts": {
		"dev": "tsc && node dist/main.js",
		"build": "tsc",
		"lint": "prettier --check . && eslint .",
		"typeorm": "typeorm-ts-node-commonjs",
		"sync": "npm run typeorm -- schema:sync -d src/data-source.ts",
		"migration:generate": "npm run typeorm -- migration:generate src/migrations/Init -d src/data-source.ts",
		"migration:run": "npm run typeorm -- migration:run -d src/data-source.ts"
	},
	"dependencies": {
		"@irealbook/irealpro": "*",
		"@irealbook/shared": "*",
		"cors": "^2.8.5",
		"csv-parse": "^6.1.0",
		"dotenv": "^16.6.1",
		"express": "^5.2.1",
		"fuse.js": "^7.1.0",
		"jsonwebtoken": "^9.0.3",
		"multer": "^2.0.2",
		"pdf-lib": "^1.17.1",
		"pug": "^3.0.3",
		"reflect-metadata": "^0.2.2",
		"sqlite3": "^5.1.7",
		"typeorm": "^0.3.28"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^25.0.3",
		"eslint": "^9.39.2",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1"
	}
}
